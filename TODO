// add to tests
// https://www.michaelbromley.co.uk/blog/mocking-classes-with-typescript/
// export type MockOf<Class, Omit extends keyof Class = never> = {
//   [Member in Exclude<keyof Class, Omit>]: Class[Member] & jest.Mock;
// };
export type PublicInterfaceOf<Class, Omit extends keyof Class = never> = {
  [Member in Exclude<keyof Class, Omit>]: Class[Member];
};

// dziala
export type PublicInterfaceOf<Class, Use extends keyof Class = keyof Class> = {
  [Member in Use]: Class[Member];
};
// i to tez dziala
export type PublicInterfaceOf<Class> = {
   [Member in keyof Class]: Class[Member];
};

//i to tez dziala
export type MockOf<Class, Use extends keyof Class = keyof Class> = {
  [Member in Use]: Class[Member] & jest.Mock;
